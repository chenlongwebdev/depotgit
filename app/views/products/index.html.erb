<p id="notice"><%= notice %></p>
<div id="product_list">
  <h1>Products</h1>

  <table>
    <thead>
    <tr>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
        <tr  class="<%= cycle("list_line_odd","list_line_even")%>">
          <td class="list_description">
            <dl>
              <dt><%= product.title %></dt>
              <dd><%= truncate(strip_tags(product.description),:length=>100) %></dd>
            </dl>
          </td>
          <td><%= image_tag(product.image_url, :class => 'list_image') %></td>
          <td><%= product.price %></td>
          <td class="list_actions"><%= link_to 'Show', product %></td>
          <td class="list_actions"><%= link_to 'Edit', edit_product_path(product) %></td>
          <td class="list_actions"><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>

<%= link_to 'New Product', new_product_path %>
